@model AddAdressViewModel


<div class="col-lg-9 col-12 mt--30 mt-lg--0">
    <div class="myaccount-content">
        <h3>Account Details</h3>
        <div class="account-details-form">
            <form method="post" asp-route="client-account-add-address">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-12  mb--30">
                        <h4>Add Addres</h4>
                    </div>
                    <div class="col-12  mb--30">
                        <label asp-for="AcseptorName"></label>
                        <input asp-for="AcseptorName" class="form-control">
                        <span asp-validation-for="AcseptorName" class="text-danger"></span>
                    </div>

                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="AcseptorLastname"></label>
                        <input asp-for="AcseptorLastname" class="form-control">
                        <span asp-validation-for="AcseptorLastname" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="AdressName"></label>
                        <input asp-for="AdressName" class="form-control">
                        <span asp-validation-for="AdressName" class="text-danger"></span>
                    </div>
                    <div class="col-lg-6 col-12  mb--30">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn--primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>